# ========================
# Required Configuration
# ========================

# Convex Deployment (Required)
# Get this from your Convex dashboard
CONVEX_DEPLOYMENT=YOUR_CONVEX_DEPLOYMENT_ID

# Clerk Authentication (Required)
# Create an account at https://clerk.dev
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=YOUR_CLERK_PUBLISHABLE_KEY
CLERK_SECRET_KEY=YOUR_CLERK_SECRET_KEY
CLERK_JWT_ISSUER_DOMAIN=YOUR_CLERK_JWT_ISSUER_DOMAIN
CLERK_WEBHOOK_SECRET=YOUR_CLERK_WEBHOOK_SECRET

# OpenAI API (Required for AI features)
# Get your API key from https://platform.openai.com
OPENAI_API_KEY=YOUR_OPENAI_API_KEY

# ========================
# Optional Configuration
# ========================

# Public URLs (Optional)
# Used for generating absolute URLs in the application
NEXT_PUBLIC_CONVEX_URL=YOUR_CONVEX_URL
NEXT_PUBLIC_HOSTING_URL=YOUR_HOSTING_URL

# Payment Gateways (Optional)
# Stripe Test Keys - Get these from your Stripe dashboard
NEXT_PUBLIC_TEST_STRIPE_PUBLISHABLE_KEY=YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_TEST_SECRET_KEY=YOUR_STRIPE_SECRET_KEY

# Razorpay Configuration - Get these from your Razorpay dashboard
RAZORPAY_WEBHOOK_SECRET=YOUR_RAZORPAY_WEBHOOK_SECRET
NEXT_PUBLIC_RAZORPAY_PAYMENT_PAGE_URL=YOUR_RAZORPAY_PAYMENT_PAGE_URL

# Third-Party Services (Optional)
# Unsplash API - Get your access key from https://unsplash.com/developers
UNSPLASH_ACCESS_KEY=YOUR_UNSPLASH_ACCESS_KEY

# Google Maps API - Get your API key from https://console.cloud.google.com
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY

# Email Service (Optional)
# Resend API - Get your API key from https://resend.com
RESEND_API_KEY=YOUR_RESEND_API_KEY

# Security (Optional but Recommended)
# Webhook Signing Secret - Generate a strong random string
WEBHOOK_SIGNING_SECRET=YOUR_WEBHOOK_SIGNING_SECRET


# Custom Domain (Optional)
# Set this if you're using a custom domain
CUSTOM_DOMAIN=YOUR_DOMAIN


# ========================
# Rate Limiting (Optional)
# ========================

# Rate limiting configuration for API endpoints
# Default: 100 requests per minute per IP
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60

# ========================
# Development Settings
# ========================

# Set to 'true' to enable debug logging
DEBUG=false
